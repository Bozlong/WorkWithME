<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_pic"
    tools:context="com.workwithme.activity.WelcomeActivity" >
              	<!-- style="AppFontNormal" -->

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="247dp"
        android:layout_marginLeft="31dp"
        android:text="@string/str_welcome"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_account"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="63dp"
        android:text="Welcome!"
        android:textColor="#FFFFFF"
        android:textSize="45dp" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/tv_account"
        android:layout_alignTop="@+id/tv_welcome"
        android:layout_marginTop="19dp"
        android:text="@string/signup"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_signup"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/btn_login"
        android:text="@string/str_account"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_login"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tv_account"
        android:layout_alignBottom="@+id/tv_account"
        android:layout_alignParentRight="true"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

</RelativeLayout>
